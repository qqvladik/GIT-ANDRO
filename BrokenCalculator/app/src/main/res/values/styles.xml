<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyActionBarStyle" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>

    </style>

    <style name="MyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonCalculateStyle">
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonCalculateStyle.ImageButtonStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="GridLayoutBackground">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

</resources>